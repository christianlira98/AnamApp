<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".SymptomsMenuActivity" tools:layout_editor_absoluteY="25dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/logo"
            android:id="@+id/imageViewSymptoms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            android:cropToPadding="true" android:adjustViewBounds="true" android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp" app:layout_constraintHorizontal_bias="0.325"
    />
    <Button
            android:text="@string/finish_symptoms_button"
            android:layout_width="0dp"
            android:id="@+id/btnFinishSymptoms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="0dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/black"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="@+id/imageViewSymptoms"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="80dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical" android:layout_height="wrap_content"
        >
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnGeneralSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:text="@string/general_symptoms_button" android:textAlignment="viewStart"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnHeadAndNeckSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnGeneralSymptoms"
                    android:text="@string/head_and_neck_symptoms_button" android:textAlignment="viewStart"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnEyeSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnHeadAndNeckSymptoms"
                    android:text="@string/eyes_symptoms_button" android:textAlignment="viewStart"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnEarSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnEyeSymptoms"
                    android:text="@string/ears_symptoms_button"
                    android:textAlignment="viewStart"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnNoseSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnEarSymptoms"
                    android:text="@string/nose_symptoms_button"
                    android:textAlignment="viewStart"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnRespiratorySystemSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnNoseSymptoms"
                    android:text="@string/respiratory_system_symptoms_button"
                    android:textAlignment="viewStart"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnGenitourinarySystemSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnRespiratorySystemSymptoms"
                    android:text="@string/genitourinary_system_symptoms_button"
                    android:textAlignment="viewStart"/>

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnGastrointestinalSystemSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnGenitourinarySystemSymptoms"
                    android:text="@string/gastrointestinal_system_symptoms_button"
                    android:textAlignment="viewStart"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnLocomotorSystemSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnGastrointestinalSystemSymptoms"
                    android:text="@string/locomotor_system_symptoms_button" android:textAlignment="viewStart"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnNervousSystem" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnLocomotorSystemSymptoms"
                    android:text="@string/nervous_system_symptoms_button" android:textAlignment="viewStart"
            />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btnPsycheSymptoms" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/btnLocomotorSystemSymptoms"
                    android:text="@string/psyche_symptoms_button" android:textAlignment="viewStart"
            />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>