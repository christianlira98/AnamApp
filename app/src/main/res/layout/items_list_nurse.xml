<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/nurseListLayout">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/round_btn"
        >

            <ImageView
                    android:id="@+id/imageViewNurse"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:padding="4dp"/>

            <TextView
                    android:id="@+id/textViewNurseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:background="@color/colorLightGray"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>

            <TextView
                    android:id="@+id/textViewCoren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewNurseName"
                    android:background="@color/colorLightGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"/>


            <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCoren"
                    android:background="@color/colorLightGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:text=" "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"/>


            <ImageButton
                    android:id="@+id/btnTrashIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:layout_toEndOf="@+id/imageViewNurse"
            />
            <ImageButton
                    android:id="@+id/btnEditIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/btnTrashIcon"
                    android:layout_toEndOf="@+id/btnTrashIcon"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>