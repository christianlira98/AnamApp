<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/nurseListLayout">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/items_recycler_style"
        >

            <ImageView
                    android:id="@+id/imageViewNurse"
                    android:layout_width="120dp"
                    android:layout_height="104dp"
                    android:padding="4dp" android:layout_marginTop="25dp" android:layout_alignParentTop="true"/>
            <TextView
                    android:id="@+id/textViewNameDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewNurseName"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"

                    android:layout_marginTop="-20dp"/>

            <TextView
                    android:id="@+id/textViewNurseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:layout_marginTop="18dp"
                    android:background="@color/colorLightGray"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary" android:layout_alignParentTop="true"/>

            <TextView
                    android:id="@+id/textViewCorenDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewCoren"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"

                    android:layout_marginTop="-20dp"/>

            <TextView
                    android:id="@+id/textViewCoren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewNurseName"
                    android:background="@color/colorLightGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"/>

            <TextView
                    android:id="@+id/textViewEmailDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewEmail"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"

                    android:layout_marginTop="-20dp"/>


            <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCoren"
                    android:background="@color/colorLightGray"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:text=" "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimary"/>


            <ImageView
                    android:id="@+id/btnTrashIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/imageViewNurse"
                    android:layout_toEndOf="@+id/imageViewNurse"
                    android:layout_marginStart="4dp"/>
            <ImageView
                    android:id="@+id/btnEditIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/btnTrashIcon"
                    android:layout_toEndOf="@+id/btnTrashIcon" android:layout_marginStart="10dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>