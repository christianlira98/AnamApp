<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/gradient_background">

    <ImageView
            android:layout_width="33dp"
            android:layout_height="31dp" app:srcCompat="@mipmap/logout"
            android:id="@+id/logOutNurseProf"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.976" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintDimensionRatio="6:1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/logo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_height="0dp"/>

    <Button android:id="@+id/btnRegPacienteNurseProf" android:layout_width="150dp" android:layout_height="95dp"
            android:text="@string/main_menu_button_registrate_patient"
            android:background="@drawable/round_btn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="81dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginStart="120dp"/>

    <Button android:id="@+id/btnBuscarPacienteNurseProf" android:layout_width="150dp" android:layout_height="95dp"
            android:text="@string/main_menu_button_search_patient" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_btn"
            android:layout_marginEnd="1dp"
            app:layout_constraintStart_toEndOf="@+id/btnRegPacienteNurseProf"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnRegPacienteNurseProf"
            app:layout_constraintBottom_toBottomOf="@+id/btnRegPacienteNurseProf"/>

    <ImageView
            android:layout_width="33dp"
            android:layout_height="31dp"
            app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/menu_image_view_back_nurse_prof"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>
