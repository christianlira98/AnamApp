<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="6:1"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

    <Button
            android:id="@+id/btnRegPaciente"
            android:layout_width="200dp"
            android:layout_height="96dp"
            android:text="@string/main_menu_button_registrate_patient"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>

    <Button
            android:id="@+id/btnBuscarPaciente"
            android:layout_width="200dp"
            android:layout_height="96dp"
            android:text="@string/main_menu_button_search_patient"
            app:layout_constraintBottom_toBottomOf="@+id/btnRegPaciente"
            app:layout_constraintTop_toTopOf="@+id/btnRegPaciente"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>

    <ImageView
            android:layout_width="33dp"
            android:layout_height="31dp" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/menu_image_view_back" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>