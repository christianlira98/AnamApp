<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/gradient_background">

    <Button android:id="@+id/btnEmployeeList" android:layout_width="150dp" android:layout_height="96dp"
            android:text="@string/main_menu_button_list_employees" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round_btn"
            app:layout_constraintTop_toTopOf="@+id/btnSearchNurse"
            app:layout_constraintBottom_toBottomOf="@+id/btnSearchNurse"
            app:layout_constraintStart_toEndOf="@+id/btnSearchNurse" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="50dp"/>
    <ImageView
            android:layout_width="match_parent"
            app:layout_constraintDimensionRatio="6:1"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_height="0dp"/>

    <Button
            android:id="@+id/btnInfo"
            android:layout_width="150dp"
            android:layout_height="96dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_btn"
            android:text="@string/profile"
            app:layout_constraintBottom_toBottomOf="@+id/btnBuscarPaciente"
            app:layout_constraintTop_toTopOf="@+id/btnBuscarPaciente"
            app:layout_constraintVertical_bias="0.888" app:layout_constraintStart_toEndOf="@+id/btnBuscarPaciente"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btnBuscarPaciente"
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:text="@string/main_menu_button_search_patient"
            android:background="@drawable/round_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button android:id="@+id/btnSearchNurse" android:layout_width="150dp" android:layout_height="96dp"
            android:text="@string/main_menu_button_search_nurse"
            android:background="@drawable/round_btn"
            app:layout_constraintStart_toEndOf="@+id/btnInfo"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnInfo" app:layout_constraintBottom_toBottomOf="@+id/btnInfo"
    />
    <ImageView
            android:layout_width="33dp"
            android:layout_height="31dp" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/menu_image_view_back" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="33dp"
            android:layout_height="31dp" app:srcCompat="@mipmap/logout"
            android:id="@+id/logOut"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.976" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>