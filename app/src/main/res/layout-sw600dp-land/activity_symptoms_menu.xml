<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".activities.SymptomsMenuActivity" tools:layout_editor_absoluteY="25dp">

    <ImageView android:layout_width="33dp" android:layout_height="31dp" app:srcCompat="?attr/actionModeCloseDrawable"
        android:id="@+id/menu_image_view_back3" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="211dp"
        android:layout_height="141dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <Button
        android:id="@+id/btnFinishSymptoms"
        android:layout_width="632dp"
        android:layout_height="0dp"
        android:layout_marginEnd="300dp"
        android:background="@drawable/round_btn"
        android:text="@string/finish_symptoms_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="632dp"
        android:layout_height="0dp"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGeneralSymptoms"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/round_btn"
                android:layout_marginStart="8dp"
                android:text="@string/general_symptoms_button"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <Button
                android:id="@+id/btnCardiovascular"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_btn"
                android:text="@string/cardiovascular_system_button"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGeneralSymptoms" />

            <Button
                android:id="@+id/btnRespiratorySystemSymptoms"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_btn"
                android:text="@string/respiratory_system_symptoms_button"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnNoseSymptoms" />

            <Button
                android:id="@+id/btnGastrointestinalSystemSymptoms"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_btn"
                android:text="@string/gastrointestinal_system_symptoms_button"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGenitourinarySystemSymptoms" />

            <Button
                android:id="@+id/btnGenitourinarySystemSymptoms"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_btn"
                android:text="@string/genitourinary_system_symptoms_button"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRespiratorySystemSymptoms" />

            <Button
                android:id="@+id/btnSupLocomotor"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_btn"
                android:text="@string/superior_locomotor_system_button"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCardiovascular" />

            <Button
                android:id="@+id/btnInfLocomotor"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/round_btn"
                android:text="@string/inferior_locomotor_system_button"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSupLocomotor" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>